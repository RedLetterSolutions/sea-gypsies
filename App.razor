    <style>
        /* Loading screen color before Blazor mounts */
        html, body, #app {
            height: 100%;
            margin: 0;
        }
        #app {
            background: #256878;
        }

        /* Rotate-to-portrait overlay for mobile landscape */
        #rotate-to-portrait-overlay {
            position: fixed;
            inset: 0;
            background: #0e1a20;
            color: #e6f7fb;
            display: none; /* toggled via JS */
            align-items: center;
            justify-content: center;
            text-align: center;
            z-index: 2147483647; /* Above everything */
            padding: 24px;
        }
        #rotate-to-portrait-overlay .content {
            max-width: 24rem;
        }
        #rotate-to-portrait-overlay h2 {
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        #rotate-to-portrait-overlay p {
            opacity: 0.85;
            line-height: 1.35;
        }
        /* Prevent scroll when overlay is visible */
        body.landscape-block {
            overflow: hidden;
            height: 100vh;
        }

        /* Success Toast */
        #sgToast {
            position: fixed;
            left: 50%;
            bottom: 28px;
            transform: translateX(-50%) translateY(20px);
            background: rgba(0, 27, 36, 0.85);
            color: #e6f7fb;
            border: 1px solid rgba(0, 212, 255, 0.45);
            box-shadow: 0 8px 24px rgba(0, 212, 255, 0.25);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-radius: 12px;
            padding: 12px 16px;
            max-width: 90vw;
            width: max-content;
            min-width: 260px;
            display: none;
            z-index: 2147483600;
        }
        #sgToast.show {
            display: block;
            animation: sgToastIn 180ms ease-out;
            transform: translateX(-50%) translateY(0);
        }
        #sgToast .msg {
            display: inline-block;
            margin-right: 10px;
        }
        #sgToast .close {
            appearance: none;
            border: 0;
            background: transparent;
            color: #89f0ff;
            font-size: 18px;
            line-height: 1;
            cursor: pointer;
        }
        @@keyframes sgToastIn {
            from { opacity: 0; transform: translateX(-50%) translateY(8px); }
            to   { opacity: 1; transform: translateX(-50%) translateY(0); }
        }
    </style>
</head>

<body>

