<div class="device-banner" id="deviceBanner">for best experience view on a desktop device</div>

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
    </Found>
    <NotFound>
        <PageTitle>The Sea Gypsies</PageTitle>
        <div class="home-container">
            
        </div>
    </NotFound>
</Router>

<style>
    .device-banner {
        position: fixed;
        top: 0; left: 0; right: 0;
        background: rgba(0,0,0,0.85);
        color: #fff;
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
        font-size: 14px;
        letter-spacing: .5px;
        text-align: center;
        padding: 10px 12px;
        z-index: 10000;
        display: none; /* hidden by default (desktop) */
    }

        /* Only shown via JS when mobile is detected (no width-based media query) */
</style>

<script>
        (function(){
            const banner = document.getElementById('deviceBanner');
            if(!banner) return;
            const ua = navigator.userAgent || navigator.vendor || '';
            const isCoarse = matchMedia('(pointer:coarse)').matches || 'ontouchstart' in window || navigator.maxTouchPoints > 1;
            const isMobileUA = /Android|iPhone|iPad|iPod|Mobile|IEMobile|Opera Mini/i.test(ua);
            const isMobile = isMobileUA || (isCoarse && window.innerWidth <= 1100);
            if (isMobile) {
                banner.style.display = 'block';
            }
        })();
</script>
