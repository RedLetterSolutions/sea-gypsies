        top: 48.87%;  /* 950px / 1944px */
        width: 58.97%; /* (880-236)px / 1092px */
        height: 3.34%; /* (1015-950)px / 1944px */
    }

    .watch-video-hotspot {
        left: 6.41%;   /* 70px / 1092px */
        top: 59.47%;   /* 1156px / 1944px */
        width: 86.00%; /* (1009-70)px / 1092px */
        height: 27.52%; /* (1691-1156)px / 1944px */
    }

    .home-button-hotspot {
        left: 42.58%;  /* 465px / 1092px */
        top: 88.58%;   /* 1722px / 1944px */
        width: 12.36%; /* (600-465)px / 1092px */
        height: 7.10%; /* (1860-1722)px / 1944px */
