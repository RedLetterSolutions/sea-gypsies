    .hotspot {
        border: 2px solid rgba(255, 255, 0, 0.8) !important;
        background: rgba(255, 255, 0, 0.3) !important;
    }
    */
</style>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private bool isMenuOpen = false;


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("initHomeBackground", "home_mobile_background.png");

                var bgImages = new[]
                {
                    "home_mobile_background.png",
                    "home/home_library_hover.png",
                    "home/home_gallery_hover.png"
                };
                await JSRuntime.InvokeVoidAsync("preloadImages", bgImages);

                // Connect to global navbar menu toggle
                var objRef = DotNetObjectReference.Create(this);
                Console.WriteLine($"Home page creating DotNetObjectReference: {objRef}");
                await JSRuntime.InvokeVoidAsync("addMobileMenuListener", objRef);
            }
            catch
            {
                // Ignore JS interop errors
            }
        }
    }

    private async Task ShowLibraryHover()
    {
        await JSRuntime.InvokeVoidAsync("setHomeBackground", "home/home_library_hover.png");
    }

    private async Task ShowGalleryHover()
    {
        await JSRuntime.InvokeVoidAsync("setHomeBackground", "home/home_gallery_hover.png");
    }

    private async Task ShowDefault()
    {
        await JSRuntime.InvokeVoidAsync("setHomeBackground", "home_mobile_background.png");
    }

    private async Task NavigateToLibrary()
    {
        await JSRuntime.InvokeVoidAsync("navigateWithTransition", "/mobile/library", "right");
    }

    private async Task NavigateToGallery()
    {
        await JSRuntime.InvokeVoidAsync("navigateWithTransition", "/mobile/art", "right");
    }

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private void CloseMenu()
    {
        isMenuOpen = false;
    }

    [JSInvokable]
    public void ToggleMenuFromJS()
    {
        Console.WriteLine("ToggleMenuFromJS called on Home page!");
        ToggleMenu();
        StateHasChanged();
    }
}