    // Debug Tool Code
    private bool debugMode = false;
    private List<DebugClick> debugClicks = new List<DebugClick>();

    private void ToggleDebugMode()
    {
        debugMode = !debugMode;
        if (!debugMode)
        {
            debugClicks.Clear();
        }
        StateHasChanged();
    }

    private async Task HandleDebugClick(MouseEventArgs e)
    {
        if (!debugMode) return;

        // Get the container dimensions via JS
        var containerInfo = await JSRuntime.InvokeAsync<ContainerInfo>("eval", @"
            (function() {
                const container = document.querySelector('.gallery-container');
                const rect = container.getBoundingClientRect();
                return {
                    width: rect.width,
                    height: rect.height,
                    left: rect.left,
                    top: rect.top
                };
            })()
        ");

        // Calculate relative position within the container
        var relativeX = e.ClientX - containerInfo.Left;
        var relativeY = e.ClientY - containerInfo.Top;

        var percentX = (relativeX / containerInfo.Width) * 100;
        var percentY = (relativeY / containerInfo.Height) * 100;

        debugClicks.Add(new DebugClick
        {
            PixelX = (int)relativeX,
            PixelY = (int)relativeY,
            PercentX = percentX,
            PercentY = percentY
        });

        // Keep only last 2 clicks for bounds calculation
        if (debugClicks.Count > 2)
        {
            debugClicks.RemoveAt(0);
        }

        StateHasChanged();
    }

    private void ClearDebugClicks()
    {
        debugClicks.Clear();
        StateHasChanged();
    }

    private BoundsInfo CalculateBounds()
    {
        if (debugClicks.Count < 2) return new BoundsInfo();

        var minX = Math.Min(debugClicks[0].PercentX, debugClicks[1].PercentX);
        var maxX = Math.Max(debugClicks[0].PercentX, debugClicks[1].PercentX);
        var minY = Math.Min(debugClicks[0].PercentY, debugClicks[1].PercentY);
        var maxY = Math.Max(debugClicks[0].PercentY, debugClicks[1].PercentY);

        return new BoundsInfo
        {
            Left = minX,
            Top = minY,
            Width = maxX - minX,
            Height = maxY - minY
        };
    }

